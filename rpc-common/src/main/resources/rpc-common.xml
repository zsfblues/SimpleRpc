<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="com.rpc.common"/>
    <context:property-placeholder location="classpath:rpc.properties"/>

    <bean id="globalRunCfg" class="com.rpc.common.config.GlobalRunCfg">
        <property name="nettyAddress" value="${netty.address}"/>
        <property name="zkAddress" value="${registry.address}"/>
        <property name="timeout" value="${rpc.timeout}"/>
    </bean>

</beans>